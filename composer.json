{
    "name": "microsoft/windowsazure",
    "description": "This project provides a set of PHP client libraries that make it easy to access Windows Azure tables, blobs, queues, service runtime and service management APIs.",
    "keywords": [ "php", "azure", "sdk" ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Azure PHP SDK",
            "email": "azurephpsdk@microsoft.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "pear/net_url2": "^2.2.2",
        "pear/mail_mime": "^1.10.11",
        "firebase/php-jwt": "^5.5.1",
        "microsoft/azure-storage": "^0.19.1",
        "guzzlehttp/guzzle": "^6.5.8",
        "zendframework/zend-mime": "^2.7.2",
        "zendframework/zend-mail": "^2.10.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.11",
        "phpunit/phpunit": "^4.8.36",
        "phpdocumentor/phpdocumentor": "^2.9.1",
        "sebastian/phpcpd": "^2.0.4",
        "phploc/phploc": "^2.1.5",
        "pdepend/pdepend": "^2.16.2",
        "phpmd/phpmd": "^2.15.0",
        "squizlabs/php_codesniffer": "^2.9.2",
        "mayflower/php-codebrowser": "^1.1.4"
    },
    "autoload": {
        "psr-4": { "WindowsAzure\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
